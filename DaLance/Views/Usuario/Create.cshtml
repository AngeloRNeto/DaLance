@model DaLance.Domain.Models.Usuario

@{
    ViewData["Title"] = "Create";
}

<div style="padding-top:2em;" class="container" ng-controller="UsuarioController">
    <h4>Cadastro de Apostador</h4>
    <hr />
    <div class="col-md-4">
        <form>
            <div class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nome" class="control-label">Nome:</label>
                <input asp-for="nome" ng-model="usuario.nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="idade" class="control-label">Idade:</label>
                <input asp-for="idade" type="number" ng-model="usuario.idade" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" ng-click="saveUser()" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
