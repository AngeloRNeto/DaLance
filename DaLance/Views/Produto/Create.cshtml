@model DaLance.Domain.Models.Produto

@{
    ViewData["Title"] = "Create";
}

<div style="padding-top:2em;" class="container" ng-controller="ProdutoController">
    <h4>Cadastro de Produto</h4>
    <hr />
    <div class="col-md-4">
        <form>
            <div class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nome" class="control-label">Nome:</label>
                <input asp-for="nome" ng-model="produto.nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="valor" class="control-label">Valor:</label>
                <input asp-for="valor" ng-model="produto.valor" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" ng-click="saveProduct()" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
